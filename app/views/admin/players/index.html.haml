%h2 Player

= link_to "New Player", new_admin_player_path
= will_paginate @players
%table
  %tr
    %th.title Title
    %th.date Date
    %th Action
  - @players.each do |player|
    %tr{class: cycle("even", "odd")}
      %td= link_to player.display_name, edit_admin_player_path(player)
      %td= player.created_at.strftime("%Y-%m-%d")
      %td.action
        = link_to 'edit', edit_admin_player_path(player)
        |
        = link_to 'delete', [:admin, player], method: :delete, confirm: "Are you sure you want to do this?"
